<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UniGetUI.Interface.Widgets.TranslatedTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="_parent"
    mc:Ignorable="d">

    <TextBlock
        x:Name="_textBlock"
        HorizontalAlignment="{x:Bind _parent.HorizontalAlignment}"
        VerticalAlignment="{x:Bind _parent.VerticalAlignment}"
        FontFamily="{x:Bind _parent.FontFamily}"
        FontSize="{x:Bind _parent.FontSize}"
        FontWeight="{x:Bind _parent.FontWeight}"
        TextAlignment="Left"
        TextWrapping="Wrap" />
</UserControl>
